@model AnimeFlix.Models.ManageAnime

@{ ViewData["Title"] = "Details"; }
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: sans-serif;
    }

    body {
        background-image: url(@Html.DisplayFor(model => model.imgAnime));
        background-size: cover;
        background-position: center;
    }

    .LandingPG {
        position: relative;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        display: flex;
        min-height: 100vh;
        transition: .1s;
        padding: 100px;
    }

    header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        padding: 30px 100px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        header .nav {
            position: relative;
            display: flex;
        }

            header .nav li {
                list-style: none;
            }

                header .nav li a {
                    display: inline-block;
                    color: white;
                    font-weight: bold;
                    margin-top: 5px;
                    text-decoration: none;
                    font-size: 13px;
                    padding: 15px 22px;
                    text-transform: none;
                }

    .content {
        position: relative;
        margin-top: 100px;
        margin-left: 22px;
        display: flex;
        width: 45%;
        justify-content: space-between;
        align-items: center;
    }

        .content .text-area h1 {
            text-transform: uppercase;
            font-size: 47px;
            margin-bottom: 6px;
            color: white;
            width: 60%;
            font-weight: bolder;
            letter-spacing: 3px;
        }

        .content .text-area h2 {
            font-size: 16px;
            margin-bottom: 6px;
            margin-top: 10px;
            color: white;
            min-width: 100px;
            font-weight: 500;
        }

        .content .text-area h3 {
            text-transform: none;
            margin-top: 15px;
            font-size: 16px;
            color: white;
        }

        .content .text-area h4 {
            text-transform: none;
            font-weight: bold;
            margin-top: 3px;
            font-size: 15px;
            color: white;
            letter-spacing: 2px;
        }

        .content .text-area a {
            display: inline-block;
            padding: 14px 24px;
            margin-top: 50px;
            text-transform: uppercase;
            font-size: 14px;
            color: white;
            letter-spacing: 2px;
            border-radius: 5px;
            font-weight: bold;
            background-color: black;
            text-decoration: none;
        }

            .content .text-area a:hover {
                background-color: white;
                color: black;
                transition: 1s;
            }

    .text-area .trailer-area {
        left: 50%;
    }

    .movie-here {
        background-color: rgba(0, 0, 0, 0.623);
        display: block !important;
        width: 1000px;
        height: 500px;
    }

        .movie-here iframe {
            padding: 10px;
        }

    #movie-link iframe {
        width: 1000px;
        height: 500px;
        position: center;
        margin-left: 20%;
    }

    #movie-link p {
        position: relative;
        max-width: 30em;
        margin-left: 30%;
        background-color: #fff;
        padding: 1.125em 1.5em;
        font-size: 1.25em;
        border-radius: 1rem;
        box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, .3), 0 0.0625rem 0.125rem rgba(0, 0, 0, .2);
    }

    #movie-link p::before {
        content: '';
        position: absolute;
        width: 0;
        height: 0;
        bottom: 100%;
        left: 1.5em;
        border: .75rem solid transparent;
        border-top: none;
        border-bottom-color: #fff;
        filter: drop-shadow(0 -0.0625rem 0.0625rem rgba(0, 0, 0, .1));
    }

    #movie-link span {
        font-size: 1.4em;
        font-weight: bold;
        text-decoration: underline;
    }

</style>
<section class="LandingPG" id="home">
    <header>
        <ul class="nav">
        </ul>
    </header>

    <div class="content">
        <div class="text-area">
            <h1 class="text-area">@Html.DisplayFor(model => model.titleAnime)</h1>
            <h4 class="text-area">@Html.DisplayFor(model => model.categoryAnime) - @Html.DisplayFor(model => model.runtime)</h4>
            <h3 class="text-area" style="color: #487EFC;"><i class="fas fa-star" aria-hidden="true"></i><i class="fas fa-star" aria-hidden="true"></i><i class="fas fa-star" aria-hidden="true"></i><i class="fas fa-star" aria-hidden="true"></i><i class="fas fa-star" aria-hidden="true"></i></h3>
            <h4 class="text-area">Rating</h4>
            <h2 class="text-area">@Html.DisplayFor(model => model.ratingAnime) / 10</h2>
            <br>
            <h4 class="text-area">Synopsis</h4>
            <h2 class="text-area">@Html.DisplayFor(model => model.descriptionAnime)</h2>
            <br>
            <h4 class="text-area">Runtime</h4>
            <h2 class="text-area">@Html.DisplayFor(model => model.runtime)</h2>
            <br>
            <h4 class="text-area">Studio</h4>
            <h2 class="text-area">@Html.DisplayFor(model => model.studion)</h2>
            <br>
            <h4 class="text-area">Author</h4>
            <h2 class="text-area">@Html.DisplayFor(model => model.author)</h2>

            <a href="#movie-link" class="btn"><i class="fas fa-play-circle-o" aria-hidden="true"></i> WATCH MOVIE</a>
        </div>
    </div>

    <div class="movie-here">@Html.Raw(Model.trailerAnime)</div>
</section>
