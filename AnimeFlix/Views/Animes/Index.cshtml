@model IEnumerable<AnimeFlix.Models.ManageAnime>

@{ ViewData["Title"] = "Index"; }
<style>
    * {
        font-family: 'Poppins', sans-serif;
        -webkit-user-select: none;
        -moz-user-select: -moz-none;
        -o-user-select: none;
        user-select: none;
    }

    img {
        -webkit-user-drag: none;
        -moz-user-drag: none;
        -o-user-drag: none;
        -webkit-user-drag: none;
    }

    img {
        pointer-events: none;
    }

    .movie_card {
        padding: 0 !important;
        width: 15rem;
        margin: 14px;
        border-radius: 10px;
        box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.2), 0 4px 15px 0 rgba(0, 0, 0, 0.19);
    }

        .movie_card img {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            height: 20rem;
        }

    .movie_info {
        color: #5e5c5c;
    }

        .movie_info i {
            font-size: 20px;
        }

    .card-title {
        width: 80%;
        color: black;
        height: 6rem;
        font-weight: bold;
    }

    .play_button {
        background-color: transparent;
        position: absolute;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        right: 10px;
        bottom: 150px;
        font-size: 30px;
        padding-left: 21px;
        padding-top: 16px;
        color: #FFFFFF;
        cursor: pointer;
    }



    #play-movie {
        background-color: #ff3d49;
        bottom: 70px;
        right: 10px;
    }
</style>
<section id="anime">
    <div class="container">
        <br>
        <h1>All Available Anime</h1>
        <br><br>
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
<div class="card movie_card">
    <img src="@Html.DisplayFor(modelItem => item.imgAnime)" class="card-img-top" alt="img" />
    <div class="card-body">
        <a id="" asp-action="Details" asp-route-id="@item.id">
            <i class="fas fa-play play_button" id="play-movie" data-toggle="tooltip" data-placement="bottom" title="Play Movie">
            </i>
        </a>
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.titleAnime)</h5>
        <span class="movie_info">@Html.DisplayFor(modelItem => item.studion)</span>
        <span class="movie_info float-right">
            @Html.DisplayFor(modelItem => item.ratingAnime) <i class="fas fa-star"></i>
        </span>
    </div>
</div>      }
        </div>
        </div>
</section>
